<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#D8BFD8"
    android:orientation="vertical"
    android:padding="8dp"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            app:srcCompat="@drawable/logouse" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_calculadora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#220b22"
                android:text="Calculadora"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:onClick="vaiCalduladora"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bt_navegador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#220b22"
                android:text="Navegador"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bt_localizacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#220b22"
                android:text="Minha Localização"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bt_agenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#220b22"
                android:text="Agenda Telefônica"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
